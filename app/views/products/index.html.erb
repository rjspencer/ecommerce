<div class="large-12 columns">
<% @products.each do |product| %>
<div class="large-3 columns product item">
  <%= link_to product do %>
  <%= image_tag product.photos.first.image.thumb('150x').url if product.photos.first.image_stored? %>
  <div class="product name"><%= product.name %></div>
  <% end %>
  <div class="product price"><%= product.price.round(2) %></div>
  <ul class="horizontal product admin">
    <li><%= link_to 'Edit', edit_product_path(product) %></li>
    <li><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  </ul>
</div>
<% end %>
</div>
<%= link_to 'New Product', new_product_path %>